@model Gymone.Entities.Login

@{
    ViewBag.Title = "Login";
}
@{
    Layout = "~/Views/Shared/_LoginLayout.cshtml";
}



<form asp-action="Login" asp-controller="Account" data-ajax="true" data-ajax-method="POST"
      data-ajax-mode="replace">

    <div class="row g-0 justify-content-center">
        <div class="col-lg-4">
            <div class="authentication-page-content p-4 d-flex align-items-center min-vh-100">
                <div class="w-100">
                    <div class="row justify-content-center">
                        <div class="col-lg-9">
                            <div>
                                <div class="text-center">

                                    <h4 class="font-size-18 mt-4">Welcome Back !</h4>
                                    <p class="text-muted">Sign in to continue to Gymone.</p>
                                </div>
                                <div class="text-center">
                                    <div asp-validation-summary="All" class="text-danger"></div>
                                </div>

                                <div class="p-2 mt-5">
                                    <div class="mb-3 auth-form-group-custom mb-4">
                                        <i class="ri-user-2-line auti-custom-input-icon"></i>
                                        <label for="username">Username</label>
                                        <input type="text" class="form-control" asp-for="username" id="username" placeholder="Enter username">
                                        <span asp-validation-for="username" class="text-danger"></span>
                                    </div>

                                    <div class="mb-3 auth-form-group-custom mb-4">
                                        <i class="ri-lock-2-line auti-custom-input-icon"></i>
                                        <label for="userpassword">Password</label>

                                        <input type="password" class="form-control" asp-for="password" id="password" placeholder="Enter password">
                                        <span asp-validation-for="password" class="text-danger"></span>

                                    </div>

                                    <div class="form-check">
                                        <input type="checkbox" class="form-check-input" asp-for="RememberMe" id="RememberMe">
                                        <label class="form-check-label" for="customControlInline">Remember me</label>
                                    </div>

                                    <div class="mt-4 text-center">
                                        <button class="btn btn-primary w-md waves-effect waves-light" type="submit">Log In</button>
                                    </div>

                                    <div class="mt-4 text-center">
                                        <a class="text-muted"
                                           asp-area="" asp-action="ForgotPassword" data-ajax="true" data-ajax-method="get"
                                           data-ajax-update="#divcontainerfluid" data-ajax-mode="replace"
                                           data-ajax-url="@Url.Action("ForgotPassword","Account")"><i class="mdi mdi-lock me-1"></i> Forgot your password?</a>
                                    </div>

                                </div>
                                <div class="mt-5 text-center">
                                    <p>
                                        Don't have an account ? <a asp-area="" asp-action="RegisterUser" data-ajax="true" data-ajax-method="get"
                                                                   data-ajax-update="#divcontainerfluid" data-ajax-mode="replace"
                                                                   data-ajax-url="@Url.Action("RegisterUser","Account")"
                                                                   class="fw-medium text-primary"> Register </a>
                                    </p>
                                    @*<p>Don't have an account ? <a href="/Account/RegisterUser" class="fw-medium text-primary"> Register </a> </p>*@
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</form>


